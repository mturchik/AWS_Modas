@using AWS_Modas.Models.Objects
@model IEnumerable<Event>
@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h3 class="display-3">Enjoy this list of 'real' events</h3>
    <table class="container table table-bordered">
        <tr>
            <th>Flagged</th>
            <th>Date</th>
            <th>Time</th>
            <th>Location</th>
        </tr>
        @foreach (var e in Model)
        {
            <tr>
                <td>
                    <i class="fa fa-flag-o"></i>
                </td>
                <td>@($"{e.TimeStamp: ddd, MMM dd, yyyy}")</td>
                <td>@($"{e.TimeStamp: hh:mm tt}") </td>
                <td>@e.Location.Name</td>
            </tr>
        }
    </table>
    <nav>
        <ul class="pagination justify-content-center">
            @if ((int) ViewData["Page"] == 1)
            {
                <li class="page-item disabled">
                    <a class="page-link" tabindex="-1">Previous</a>
                </li>
                <li class="page-item disabled">
                    <a class="page-link" asp-route="/$1">1</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-route="/$Page@((int) ViewData["Page"] - 1)" tabindex="-1">Previous</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-route="/$Page@((int) ViewData["Page"] - 1)">@((int) ViewData["Page"] - 1)</a>
                </li>
            }
            <li class="page-item">
                <a class="page-link" asp-route="/$Page@((int) ViewData["Page"])">@((int) ViewData["Page"])</a>
            </li>
            @if ((int) ViewData["Page"] == (int) ViewData["LastPage"])
            {
                <li class="page-item">
                    <a class="page-link disabled">@((int) ViewData["Page"] + 1)</a>
                </li>
                <li class="page-item disabled">
                    <a class="page-link">Next</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-route="/$@((int) ViewData["Page"] + 1)">@((int) ViewData["Page"] + 1)</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-route="/$@((int) ViewData["Page"] + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>

@section scripts {
    <script>

        $('.fa').on('click',
            (i) => {
                console.log(i.target.classList);
                if (i.target.classList.contains('fa-flag')) {
                    i.target.classList.remove('fa-flag');
                    i.target.classList.add('fa-flag-o');
                } else if (i.target.classList.contains('fa-flag-o')) {
                    i.target.classList.remove('fa-flag-o');
                    i.target.classList.add('fa-flag');
                }
            });

    </script>
}