@using AWS_Modas.Models.Objects
@model IEnumerable<Event>
@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h3 class="display-3">Enjoy this list of 'real' events</h3>
    <table class="container table table-bordered">
        <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Location</th>
        </tr>
        @foreach (var e in Model)
        {
            <tr>
                <td>@($"{e.TimeStamp: ddd, MMM dd, yyyy}")</td>
                <td>@($"{e.TimeStamp: hh:mm tt}") </td>
                <td>@e.Location.Name</td>
            </tr>
        }
    </table>
    <nav>
        <ul class="pagination justify-content-center">
            @if ((int) ViewData["pageNo"] == 1)
            {
                <li class="page-item disabled">
                    <a class="page-link" asp-action="Index" asp-route-page="@((int) ViewData["pageNo"] - 1)">Previous</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@((int) ViewData["pageNo"] - 1)">@((int) ViewData["pageNo"] - 1)</a>
                </li>
            }
            <li class="page-item disabled">
                <a class="page-link">@ViewData["pageNo"]</a>
            </li>
            @if ((int) ViewData["pageNo"] == (int) ViewData["lastPage"])
            {
                <li class="page-item disabled">
                    <a class="page-link" asp-action="Index" asp-route-page="@ViewData["lastPage"]">Last</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@((int) ViewData["pageNo"] + 1)">@((int) ViewData["pageNo"] + 1)</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@ViewData["lastPage"]">Last</a>
                </li>
            }
        </ul>

    </nav>
</div>